<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:m="urn:import:gwt.material.design.client.ui" >
    <ui:style>

        .label{
            margin-left: 5%;
            margin-top: 5%
        }
        header, main, footer {
            padding-left: 300px;
        }
    </ui:style>

    <m:MaterialCard type="basic" ui:field="resCard"  >

        <m:link>
            <g:HTMLPanel>
                <m:MaterialLabel text="Order Description: " />
                <m:MaterialLabel ui:field="txtOrder" />
                <br/>
                <m:MaterialLabel text="Order Amount: " />
                <m:MaterialLabel ui:field="txtAmount" />
                <br/>
                <m:MaterialLabel text="Order Date: " />
                <m:MaterialLabel ui:field="txtDate" />
            </g:HTMLPanel>
        </m:link>

    </m:MaterialCard>


</ui:UiBinder>