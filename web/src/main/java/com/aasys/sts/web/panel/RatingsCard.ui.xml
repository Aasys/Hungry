<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:m="urn:import:gwt.material.design.client.ui">
    <ui:style>

        .label {
            margin-left: 5%;
            margin-top: 5%
        }

        header, main, footer {
            padding-left: 300px;
        }
